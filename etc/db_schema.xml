<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="juszczyk_custom_sku_changelog" resource="default" engine="innodb" comment="Custom SKU Changelog">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="int" name="product_id" unsigned="true" nullable="false" identity="false" comment="Product ID"/>
        <column xsi:type="varchar" name="old_value" nullable="true" comment="Old Value"/>
        <column xsi:type="varchar" name="new_value" nullable="true" comment="New Value"/>
        <column xsi:type="datetime" name="changed_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false"
                comment="Changed At Date"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="foreign"
                    referenceId="JUSZCZYK_CUSTOM_SKU_CHANGELOG_PRODUCT_ID_CATALOG_PRODUCT_ENTITY_ENTITY_ID"
                    table="juszczyk_custom_sku_changelog" column="product_id" referenceTable="catalog_product_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
    </table>
</schema>
